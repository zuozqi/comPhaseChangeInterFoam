FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 77.2;

boundaryField
{
    heatwall
    {
        type            externalWallHeatFluxTemperature;        
        mode            flux;
  
         q               uniform 6.01;
         thicknessLayers (0.1 0.2 0.3 0.4);
         kappaLayers     (1 2 3 4);
  
         kappaMethod     fluidThermo;
  
         value           $internalField;
    }
    topwall
    {
        type            zeroGradient;
    }

    defaultFaces
    {
        type            empty;
    }
}

