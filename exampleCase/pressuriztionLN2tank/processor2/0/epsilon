FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    arch        "LSB;label=32;scalar=64";
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];


internalField   uniform 0.001;

boundaryField
{
    heatwall
    {
        type            epsilonWallFunction;
        value           uniform 0.001;
    }
    topwall
    {
        type            epsilonWallFunction;
        value           uniform 0.001;
    }
    frontAndBack
    {
        type            empty;
    }
    procBoundary2to1
    {
        type            processor;
        value           uniform 0.001;
    }
}


